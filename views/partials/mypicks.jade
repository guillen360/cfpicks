h2 here are my picks

h3 form to verify pick:
form(method="POST", action="/api/picks")
    input(type="text", name="team_id", value="UT")
    input(type="text", name="game_id", value="W01G01")
    input(type="submit")

div.accordion#accordion
    - for (var x = 1; x <= 15; x++) {
        div.accordion-group 
            div.accordion-heading
                a(data-toggle="collapse", data-parent="#accordion", href="#collapse_#{weeks[x]['id']}").accordion-toggle Week #{weeks[x]['id']}
            - if(weeks[x]['active']){
                div(id="collapse_#{weeks[x]['id']}").accordion-body.collapse.in
                    div.accordion-inner
                        ul.nostyle_list
                            - for (var i = 0; i <= games.length - 1; i++) {
                                li.row 
                                    input(type="hidden", name="game_id", value="#{games[i].id}").gameid
                                    span.span5
                                        - if(games[i].pick_team_id == games[i].home_team_id){
                                            button(disabled).span3.btn.btn-success
                                                i.icon-white.icon-ok
                                                |  #{games[i]['home_team']['college']}
                                                input(type="hidden", name="team_id", value="#{games[i]['home_team_id']}")
                                        - }else{
                                            button.span3.btn.bnpick
                                                i.icon-pencil
                                                |  #{games[i]['home_team']['college']}
                                                input(type="hidden", name="team_id", value="#{games[i]['home_team_id']}")
                                                div #{games[i].pick_team_id} | #{games[i].home_team_id}
                                        - }

                                    span.span2 #{games[i]['spread']}

                                    span.span4
                                         - if(games[i].pick_team_id == games[i].away_team_id){
                                            button(disabled).span3.btn.btn-success
                                                i.icon-white.icon-ok
                                                |  #{games[i]['away_team']['college']}
                                                input(type="hidden", name="team_id", value="#{games[i]['away_team_id']}")
                                        - }else{
                                            button.span3.btn.bnpick
                                                i.icon-pencil
                                                |  #{games[i]['away_team']['college']}
                                                input(type="hidden", name="team_id", value="#{games[i]['away_team_id']}")
                                                div #{games[i].pick_team_id} | #{games[i].away_team_id}

                                        - }
                            - };
            - }else{
                div(id="collapse_#{weeks[x]['id']}").accordion-body.collapse
                    div.accordion-inner
            - }
    - };